@model IEnumerable<Nosh.Models.VendingMachine>

@{
    ViewData["Title"] = "Vending Machines";
}

<h1>Vending Machines</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Vending Machine Name:
            </th>
            <th>
                Vending Machine Location:
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.vendingMachineName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.vendingMachineLocation)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                    @*<a asp-action="Details" asp-route-id="@item.id">Details</a> |*@
                    <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="snackButtonCenter">
    <button type="button" class="btn btn-dark addASnackButton">
        <a asp-action="Create" class="snackText">Add a vending machine</a>
    </button>
</div>

